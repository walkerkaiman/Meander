{
  "name": "meander-monorepo",
  "private": true,
  "packageManager": "pnpm@8.6.10",
  "version": "1.0.0",
  "description": "MEANDER monorepo containing Editor and Conductor packages",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm --recursive run dev",
    "test": "pnpm -r run test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "lint": "pnpm -r run lint",
    "start": "pnpm --filter conductor-server start",
    "conductor": "concurrently \"pnpm --filter conductor-server dev\" \"pnpm --filter conductor-client dev\"",
    "conductor:server": "pnpm --filter conductor-server dev",
    "conductor:client": "pnpm --filter conductor-client dev",
    "conductor:audience": "pnpm --filter audience-page dev",
    "test:install": "playwright install",
    "test:e2e:all": "playwright test --project=conductor-e2e --project=audience-e2e --project=mobile-audience-e2e",
    "test:run": "node run-tests.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "concurrently": "^8.2.0",
    "typescript": "^5.2.2",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "multer": "^2.0.2",
    "react-flow-renderer": "^10.3.17"
  }
}
