# MEANDER Conductor Configuration
# Wi-Fi network configuration
WIFI_NETWORK_NAME=Beachcat
WIFI_PASSWORD=1234567890

# Server configuration
SERVER_PORT=4000

# OSC (Open Sound Control) configuration
OSC_PORT=57121

# OSC Multicast Mode (RECOMMENDED for multiple listeners)
OSC_MULTICAST=true
# OSC_HOST options when OSC_MULTICAST=true:
#   239.0.0.1       = Multicast group (default, recommended)
#   224.0.0.0 - 239.255.255.255 = Any multicast address range
#
# OSC_HOST options when OSC_MULTICAST=false:
#   192.168.4.255   = Subnet broadcast (may not work on some networks)
#   192.168.4.119   = Send to specific device IP (single listener only)
#
# MULTICAST is the recommended mode for reaching multiple computers!
# Your OSC listeners must JOIN the multicast group 239.0.0.1 to receive messages.
OSC_HOST=239.0.0.1

DATA_DIR=~/.meander
LOG_LEVEL=info
